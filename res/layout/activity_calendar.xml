<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1280" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="580"
        android:padding="4dp"
        android:weightSum="768" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="218"
            android:weightSum="2"
            android:orientation="vertical"
            android:padding="8dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="reward" />
        </LinearLayout>

        <TextView
            android:id="@+id/calender_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="550"
            android:text="sample text blah blah ~" />
    </LinearLayout>

    <GridView
        android:id="@+id/calender_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="900"
        android:numColumns="7" />

</LinearLayout>